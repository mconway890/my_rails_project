<% if current_user.reviews.empty? %>
  <h3>No Reviews Yet!</h3>
<% else %>
  <% current_user.reviews.each do |review| %>
    <%= render partial: "review", locals: {review: review} %>
  <% end %>
<% end %>

<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-review").on('click', function() {
    var id = $(this).data("id");
    $.get("/reviews/" + id + "/review_data", function(data) {
      // Replace text of body-id div
      $("#body-" + id).html(data["description"]);
    });
  });
});
</script>
