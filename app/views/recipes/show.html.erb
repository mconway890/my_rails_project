<section class="recipes">
  <h3><%= @recipe.name %></h3>
  <p>Prep Time:
    <%= @recipe.prep_time %>
    minutes
  </p>
  <p>Cook Time:
    <%= @recipe.cook_time %>
    minutes
  </p>
  <%= render 'ingredients/list_ingredients', recipe: @recipe %>
  <h3>Instructions:</h3>
    <%= @recipe.instructions %>
  <br>
  <%= link_to 'Edit Recipe', edit_user_recipe_path(@recipe) %>
  |
  <%= link_to 'Remove Recipe', @recipe, :method => :delete %>
  |
  <%= link_to 'Go Back', recipes_path %><br><br>
    <%= render 'reviews/form', review: @recipe.reviews.new, recipe: @recipe %>
</section>

<section id="reviews-section">
  <button onclick="renderReviews('submitted-reviews')">See Reviews</button>
  <div id="submitted-reviews" style="display:none;">
    <% @recipe.reviews.each do |r| %>
      <% if r.reviewer != nil %>
        <h6>Posted by: <%= r.reviewer %></h6>
      <% end %>
      <% if r.difficulty != nil && r.description != nil %>
        <p>Difficulty: <%= r.difficulty %><br>
        <%= r.description %>
        </p>
      <% end %>
    <% end %>
</div>
</section>
