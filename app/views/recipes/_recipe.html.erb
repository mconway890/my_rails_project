<li>
  <%= link_to recipe.name, recipe_path(recipe) %> |
  <% if recipe.reviews.present? %>
  Difficulty: <%= recipe.reviews.average(:difficulty).round %> |
  Reviews: <%= recipe.reviews.count %>
  <% else %>
      No Reviews
  <% end %>
  <br>
  <%= link_to "Delete", recipe_path(recipe), method: 'delete' %>
  <%= link_to "Edit", edit_recipe_path(recipe) %>
</li>
